<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.messenger">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.android.messenger.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.android.messenger.Activites.GroupChat"></activity>
        <activity android:name="com.android.messenger.Activites.NewGroup" />
        <activity
            android:name="com.android.messenger.Activites.Chat"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.android.messenger.Activites.NewChat"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.android.messenger.Activites.Username"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.android.messenger.Activites.Dashboard"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.android.messenger.Activites.Register"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.android.messenger.Activites.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>